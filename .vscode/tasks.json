{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "LaTeX: Build Current File",
            "type": "shell",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-file-line-error",
                "-halt-on-error",
                "-interaction=nonstopmode",
                "-outdir=./build",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "latex",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "LaTeX: Clean Build Files",
            "type": "shell",
            "command": "latexmk",
            "args": ["-C", "-outdir=./build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "LaTeX: Watch Current File",
            "type": "shell",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-pvc",
                "-file-line-error",
                "-halt-on-error",
                "-interaction=nonstopmode",
                "-outdir=./build",
                "${file}"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        }
    ]
}