% DS9 Beamer Theme Style File
% Use this file by adding \usepackage{ds9_theme} to your preamble

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ds9_theme}[2024/10/01 DS9 Beamer Theme]

% Required packages
\RequirePackage{amsmath}
\RequirePackage{physics}
\RequirePackage{graphicx}
\RequirePackage{siunitx}
\RequirePackage{xcolor}
\RequirePackage{tikz}
\RequirePackage{pgfplots}
\RequirePackage{listings}
\RequirePackage{verbatim}
\RequirePackage{minted}

% Set image search paths
\graphicspath{{../images/}{../../images/}{../../../shared/images/}{./pasted-images/}{../../images/}}

% Configure pgfplots for consistency
\pgfplotsset{compat=1.18}

% Define custom colors matching website theme
\definecolor{background}{HTML}{252422}
\definecolor{primarytext}{HTML}{000000}
\definecolor{titletext}{HTML}{fffcf2}
\definecolor{accent}{HTML}{eb5e28}
\definecolor{contentbg}{HTML}{403d39}
\definecolor{borders}{HTML}{ccc5b9}

% Set up the Madrid theme with custom colors
\usetheme{Madrid}
\usecolortheme{whale}
\setbeamercolor{palette primary}{bg=background,fg=titletext}
\setbeamercolor{palette secondary}{bg=contentbg,fg=titletext}
\setbeamercolor{palette tertiary}{bg=accent,fg=primarytext}
\setbeamercolor{palette quaternary}{bg=borders,fg=background}
\setbeamercolor{structure}{fg=accent}
\setbeamercolor{title}{fg=accent}
\setbeamercolor{subtitle}{fg=titletext}
\setbeamercolor{frametitle}{bg=background,fg=titletext}
\setbeamercolor{block title}{bg=contentbg,fg=titletext}
\setbeamercolor{block body}{bg=contentbg!20,fg=primarytext}

% Rounded corners and shadows for all blocks
\setbeamertemplate{blocks}[rounded][shadow=true]

\endinput