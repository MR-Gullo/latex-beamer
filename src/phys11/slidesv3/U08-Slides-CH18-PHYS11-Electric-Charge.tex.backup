\begin{frame}[shrink]
\frametitle{Key Equations and Laws}
\begin{block}{Conservation of Charge}
$$\boxed{q_{\text{initial}} = q_{\text{final}}}$$
Charge cannot be created or destroyed.
\end{block}

\vspace{0.3cm}
\begin{block}{Fundamental Charge}
$$\boxed{e = 1.602 \times 10^{-19} \text{ C}}$$
Charge of one proton (positive) or one electron (negative).
\end{block}

\vspace{0.3cm}
\begin{block}{Number of Charges}
$$\boxed{n = \frac{q_{\text{total}}}{e}}$$
Number of elementary charges in a given total charge.
\end{block}
\note{- Three key equations for section 18.1\\\\
- Conservation: total charge constant in isolated system\\\\
- Fundamental charge: building block of all charge\\\\
- Counting charges: how many electrons or protons\\\\
- These appear on assessments}
\end{frame}

\begin{frame}
\frametitle{Key Concepts: Materials and Transfer}
\begin{block}{Conductors and Insulators}
\textbf{Conductors:} Charge moves freely (metals)\\
\textbf{Insulators:} Charge cannot move (rubber, plastic, glass)\\
\textbf{Semiconductors:} Switchable (silicon in computer chips)
\end{block}

\vspace{0.3cm}
\begin{block}{Methods of Charging}
\textbf{Contact:} Rubbing transfers electrons\\
\textbf{Conduction:} Touching transfers charge\\
\textbf{Induction:} Separation without touching\\
\textbf{Polarization:} Charge separates but net charge = 0
\end{block}
\note{- Materials classified by ability to conduct charge\\\\
- Four ways to charge objects\\\\
- Remember: only electrons move in solids (protons stuck)\\\\
- Polarization doesn't create charge, just redistributes it}
\end{frame}

